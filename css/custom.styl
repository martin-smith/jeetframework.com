@import 'jeet'
@import 'axis/animation'

// edit()

$roundish
    border-radius 3px
    padding 5px 10px

a
    color blue
    &:hover
        color darken(blue, 20%)

header#top
    background #eee
    margin-bottom 40px
    overflow hidden
    > div
        center(900px)
        padding-top 20px
        padding-bottom 20px
        align(v)
    a.logo
        col(1/5)
        animation bounceInUp 1s
    nav
        col(2.5/5, offset: 1.5/5)
        position relative
        z-index 1
        a
            col(1/4 2.5/5)
            button(yellow)
            padding-left 0
            padding-right 0
section.basics
    center(900px)
    > article
        @extend $cf
        border-bottom 1px solid #eee
        margin-bottom 20px
        .code
            col(1/2)
            pre
                fs(12px)
                margin-bottom 20px
        .result
            margin-bottom 20px
            col(1/2)
            a
                text-decoration none
            aside
                col(1/3)
                @extend $roundish
            article
                col(2/3)
                @extend $roundish
        &.nested
            .result
                aside
                    col(1/3 1/2)
                article
                    col(2/3 1/2)
        &.spans
            nav
                @extend $cf
                background none 
                a
                    span(1/3)
                    @extend $roundish
                    &:hover
                        background rgba(#000, .25) 
                    &:first-child
                        border-top-right-radius 0
                        border-bottom-right-radius 0
                    &:nth-child(2)
                        border-radius 0
                    &:last-child
                        border-top-left-radius 0
                        border-bottom-left-radius 0
        &.offsets
            .logo
                col(1/4 1/2)
                @extend $roundish
            nav
                col(1/2 1/2, offset: 1/4)
                background none
                a
                    span(1/3)
                    @extend $roundish
                    &:hover
                        background rgba(#000, .25) 
                    &:first-child
                        border-top-right-radius 0
                        border-bottom-right-radius 0
                    &:nth-child(2)
                        border-radius 0
                    &:last-child
                        border-top-left-radius 0
                        border-bottom-left-radius 0
        &.ordering
            article
                col(3/5 1/2)
            nav
                col(2/5 1/2)
                background none 
                a
                    @extend $roundish
                    display block
                    margin-bottom 5px
                    &:hover
                        background rgba(#000, .25) 
                    &:last-child
                        margin-bottom 0
        &.centering
            .demo
                header
                    @extend $roundish
                    background rgba(#000, .15)
                    > div
                        @extend $roundish
                        center(250px)

.result
    > div
        edit()
    .demo
        @extend $cf
    header
        margin-bottom 20px
        h4
            fs(20px)
            margin-top 0
            margin-bottom 0
            color #222 
        p
            fs(12px)
            margin-top 5px
            line-height 20px 

pre
    pre()
    position relative
    &:after
        absolute bottom right 5px
        content attr(class)
        bold()
        fs(10px)
        color darken(#eee, 20%)
code
    code()
    fs(10px)

// Mobile
bp(800px)
header#top > div, section.basics article .result
    stack()
section.basics article .code
    stack(align: left)
header#top a.logo
    stack()
    margin-bottom 20px
    img
        width 150px 
header#top nav
    stack()
    a
        col(1/2, cycle: 2)
        margin-bottom 10px
section.basics article .result aside
    col(1/3)
section.basics article .result article
    col(2/3)
section.basics > article.ordering article
    col(3/5 1/2)
    shift(2/5 1/2)
section.basics > article.ordering nav
    col(2/5 1/2)
    shift(-3/5 1/2)
endbp()