@import 'jeet'
@import 'axis/animation'

// edit()

$roundish
    border-radius 3px
    padding 5px 10px
$button_border
    box-shadow 0 0 0 4px rgba(0,0,0,.03)
    transition 250ms all ease
    &:hover
        box-shadow 0 0 0 4px rgba(0,0,0,.05)
a
    color blue
    &:hover
        color darken(blue, 20%)

header#top
    background #eee 
    margin-bottom 20px
    overflow hidden
    > div
        center(1300px, 20px)
        padding-top 20px
        padding-bottom 20px
        // align(v)
    a.logo
        col(1.5/8)
        animation tada 300ms
    nav
        col(1/2, offset: 2.5/8)
        position relative
        z-index 1
        margin-top 25px
        a
            col(1/4 1/2)
            simple-button(yellow)
            @extend $button_border
            padding-left 0
            padding-right 0
.page
    center(1300px, 20px)
    min-height 900px 
#sidebar
    col(1/8)
    shift(7/8)
    padding-top 20px
    a
        simple-button(#eee)
        display block 
        padding-left 0
        padding-right 0
        border-radius 0
        margin-bottom 0 
        padding-top 13px
        padding-bottom 13px
        border-bottom 1px solid darken(#eee, 3%)
        border-top 1px solid lighten(#eee, 30%)
        &:first-child
            border-top-left-radius 3px
            border-top-right-radius 3px
            border-top none
        &:last-child
            border-bottom-left-radius 3px
            border-bottom-right-radius 3px
            border-bottom none 
section.basics
    col(7/8)
    shift(-1/8)
    > article
        @extend $cf
        border-bottom 1px solid #eee
        padding-top 20px
        &:last-child
            border-bottom none
        .code
            col(1/2.5 7/8)
            pre
                fs(12px)
                margin-bottom 20px
        .result
            margin-bottom 20px
            col(1.5/2.5 7/8)
            a
                text-decoration none
        &.basic
            aside
                col(1/3)
                @extend $roundish
            article
                col(2/3)
                @extend $roundish
        &.nested
            .result
                aside
                    col(1/3 1.5/2.5 7/8)
                    @extend $roundish
                article
                    col(2/3 1.5/2.5 7/8)
                    @extend $roundish
        &.cycle
            .block
                @extend $roundish
                col(1/4 1.5/2.5 7/8, cycle: 4)
                margin-bottom 10px
        &.spans
            nav
                @extend $cf
                background none 
                a
                    span(1/3)
                    @extend $roundish
                    &:hover
                        background rgba(#000, .25) 
                    &:first-child
                        border-top-right-radius 0
                        border-bottom-right-radius 0
                    &:nth-child(2)
                        border-radius 0
                    &:last-child
                        border-top-left-radius 0
                        border-bottom-left-radius 0
        &.offsets
            .logo
                col(1/4 1.5/2.5 7/8)
                @extend $roundish
            nav
                col(1/2 1.5/2.5 7/8, offset: 1/4)
                background none
                a
                    span(1/3)
                    @extend $roundish
                    &:hover
                        background rgba(#000, .25) 
                    &:first-child
                        border-top-right-radius 0
                        border-bottom-right-radius 0
                    &:nth-child(2)
                        border-radius 0
                    &:last-child
                        border-top-left-radius 0
                        border-bottom-left-radius 0
        &.ordering
            article
                col(3/5 1.5/2.5 7/8)
                @extend $roundish
            nav
                col(2/5 1.5/2.5 7/8)
                background none 
                a
                    @extend $roundish
                    display block
                    margin-bottom 5px
                    &:hover
                        background rgba(#000, .25) 
                    &:last-child
                        margin-bottom 0
        &.centering
            .demo
                header
                    @extend $roundish
                    background rgba(#000, .15)
                    > div
                        @extend $roundish
                        center(250px)
        &.edit
            .demo
                article, aside
                    @extend $roundish
                article
                    col(2/3 1.5/2.5 7/8)
                aside
                    col(1/3 1.5/2.5 7/8)
                header, p
                    @extend $roundish
                header
                    margin-bottom 5px
        &.align
            .demo
                div
                    align(both)
                    height 200px
                    @extend $roundish
                img
                    @extend $roundish
                    padding 0
        &.mobile
            .demo
                div
                    flash(warning)
                    fs(13px)
                    line-height 20px
        &.stack
            aside, article
                @extend $roundish
            aside
                col(1/3 1.5/2.5 7/8)
            article
                col(2/3 1.5/2.5 7/8)
        &.ui
            .demo
                a
                    button(red)
        &.hamburgers
            .demo
                position relative
                padding-bottom 40px 
            .hamburger
                background none
                hamburger(bg: red, style: flat, bp: 1200px, t:10px)
            nav
                background none
                a
                    simple-button(#eee)
                    col(1/3 1.5/2.5 7/8)
                    
footer
    background #eee
    margin-top 20px
    > div
        center(1300px, 20px)
        fs(13px)
        line-height 19px 
        padding-top 20px
        padding-bottom 20px
    section
        col(7/8)
        ul
            col(1.5/2.5 7/8, offset: 1/2.5)
    b
        width 220px
        float left
    p
        margin-bottom 10px
        overflow hidden

.result
    > div
        edit()
    .demo
        @extend $cf
    header
        margin-bottom 20px
        h4
            fs(20px)
            line-height 26px 
            margin-top 0
            margin-bottom 0
            color #222 
        p
            fs(12px)
            margin-top 5px
            line-height 20px 

pre
    pre()
    position relative
    &:after
        absolute bottom right 5px
        content attr(class)
        bold()
        fs(10px)
        color darken(#eee, 20%)
code
    code()
    fs(10px)

.back_to_top
    fixed bottom 9px right 9px
    simple-button(yellow)
    @extend $button_border
    display none 

// Demos page
.demos
    > header
        text-align center
        center(700px)
        margin-top 20px
        padding-bottom 20px
        border-bottom 1px solid #eee
        margin-bottom 40px
        h1
            fs(40px)
            bold()
            letter-spacing -.035em
            color #222
            margin-bottom 10px
        p
            line-height 22px
            margin-bottom 20px
    figure
        animation fadeInDown 400ms
        col(1/3, cycle:3)
        figure(darken(#eee, 10%))
        margin-bottom 20px
        figcaption
            normal()
            text-align left
        header
            bold()
            fs(14px)
            margin-bottom 5px
            a
                color #222
                text-decoration none 
        p
            fs(12px)
            line-height 18px 
            color lighten(#555, 20%)
            margin-bottom 5px
            &:last-child
                margin-bottom 0
        img
            background #fff
            margin-bottom 10px
            width 100%
            border-radius 10px
        nav
            @extend $cf
            a
                span(1/3)
                simple-button(yellow)
                &:first-child
                    border-top-right-radius 0
                    border-bottom-right-radius 0
                &:nth-child(2)
                    border-radius 0
                &:last-child
                    border-top-left-radius 0
                    border-bottom-left-radius 0
                &:only-child
                    border-radius 3px



// Mobile
bp(1000px)
.demos figure
    col(1/2)
endbp()
bp(730px)
.demos > header
    padding-bottom 10px
    margin-bottom 20px
.demos figure
    center(400px)
    padding-bottom 20px
    border-bottom 1px solid #eee
    margin-bottom 20px
endbp()
bp(800px)
header#top > div, section.basics article .result
    stack()
header#top a.logo
    stack()
    margin-bottom 20px
    img
        width 150px
header#top
    margin-bottom 0
header#top nav
    stack()
    a
        col(1/2, cycle: 2)
        margin-bottom 10px
.lt-ie9 header#top nav a
    stack()
section.basics article .result aside
    col(1/3)
section.basics article .result article
    col(2/3)
section.basics > article.ordering article
    col(3/5 1.5/2.5 7/8)
    shift(2/5 1.5/2.5 7/8)
section.basics > article.ordering nav
    col(2/5 1.5/2.5 7/8)
    shift(-3/5 1.5/2.5 7/8)
#sidebar, section.basics
    unshift()
    stack()
section.basics > article .code
    stack(align: left)
section.basics > article.cycle .block
    col(1/2 1.5/2.5 7/8, cycle: 2, uncycle: 4)
footer
    text-align center
    b
        display block
        width auto
        float none
    li
        margin-bottom 10px
    section
        stack()
        ul
            stack()
endbp()

bp(550px, mf)
section.basics > article.mobile .demo div
    flash(error)
endbp()

bp(1000px)
section.basics > article.stack aside, section.basics > article.stack article
    stack(align: left)
    margin-bottom 10px
endbp()